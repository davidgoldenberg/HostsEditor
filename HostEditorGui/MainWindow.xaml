<Window x:Class="HostEditorGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="FilePath:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="Path" Content="path" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="59,0,0,0" ></Label>
        
        <StatusBar Name="Status" HorizontalAlignment="Left" Height="20" VerticalAlignment="Bottom" Width="525">
            <Label Content="Status:"/>
